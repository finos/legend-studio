{
  "name": "legend-studio",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn clean && lerna run build --stream",
    "build:ci": "yarn build",
    "build:sass": "lerna run build:sass --stream",
    "build:setup": "yarn clean && lerna run build --stream --ignore @finos/legend-studio-app --ignore legend-studio-app",
    "build:tsc": "tsc --build",
    "check:ci": "yarn check:tsc && yarn check:project-ref && yarn lint:ci && yarn check:format && yarn check:copyright",
    "check:copyright": "node ./scripts/copyright/checkCopyrightHeaders.js --disallow-internal",
    "check:format": "prettier --check --end-of-line=auto \"scripts/**/*.js\" \"packages/*/src/**/*.{js,ts,tsx,html,scss,css}\"",
    "check:oss": "node ./scripts/internal/oss/checkInternalCodeLeaks.js",
    "check:project-ref": "node ./scripts/typescript/checkProjectReferenceConfigs.js",
    "check:tsc": "yarn build:tsc",
    "check:update": "yarn upgrade-interactive --latest && yarn",
    "clean": "rimraf \"build\" && lerna run --parallel clean",
    "commit": "git-cz",
    "dev": "yarn workspace legend-studio-app dev",
    "dev:ext": "yarn workspace @finos/legend-studio-app dev",
    "dev:tsc": "tsc --build --watch",
    "fix": "yarn fix:copyright && yarn fix:style && yarn fix:js && yarn fix:format",
    "fix:copyright": "node ./scripts/copyright/checkCopyrightHeaders.js --update",
    "fix:format": "prettier --write \"scripts/**/*.js\" \"packages/*/src/**/*.{js,ts,tsx,html,scss,css}\"",
    "fix:js": "eslint --cache --cache-location ./build/.eslintcache \"scripts/**/*.{js,ts,tsx}\" --fix && lerna run fix:js --stream --parallel",
    "fix:style": "yarn lint:style --fix",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:ci": "cross-env CI=true yarn lint:js -- -- --max-warnings=0 && yarn lint:style --max-warnings=0",
    "lint:js": "eslint --cache --cache-location ./build/.eslintcache \"scripts/**/*.{js,ts,tsx}\" && lerna run lint:js --stream --parallel",
    "lint:style": "stylelint --cache --cache-location ./build/.stylelintcache \"packages/*/src/**/*.{scss,css}\"",
    "setup": "npx cross-env CYPRESS_INSTALL_BINARY=0 yarn && lerna run setup && yarn build:setup",
    "start": "yarn dev",
    "test": "jest",
    "test:ci": "yarn build:setup && jest --clearCache && yarn test:coverage",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --help-url 'Use `yarn commit` or see guide at: https://www.conventionalcommits.org/en/v1.0.0/'"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{html,md,mdx}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./scripts/commitizenPrompt.js"
    }
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "devDependencies": {
    "@babel/core": "7.13.8",
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@finos/babel-preset-legend-studio": "0.0.0",
    "@finos/eslint-plugin-legend-studio": "0.0.0",
    "@finos/legend-studio-dev-utils": "0.0.0",
    "@finos/stylelint-config-legend-studio": "0.0.0",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "chalk": "4.1.0",
    "commitizen": "4.2.3",
    "cross-env": "7.0.3",
    "eslint": "7.21.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "jest-junit": "12.0.0",
    "lerna": "3.22.1",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "sort-package-json": "1.49.0",
    "stylelint": "13.11.0",
    "typescript": "4.2.2",
    "yargs": "16.2.0",
    "yarn": "1.22.10"
  },
  "engines": {
    "node": ">=14.3.0",
    "yarn": ">=1.22.5"
  }
}
