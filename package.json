{
  "name": "legend-studio",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn clean && yarn workspaces foreach --topological-dev --verbose run build",
    "build:sass": "yarn workspaces foreach --topological-dev --verbose run build:sass",
    "build:setup": "yarn clean && yarn workspaces foreach --topological-dev --verbose --exclude legend-studio --exclude @finos/legend-studio-app run build",
    "build:tsc": "tsc --build",
    "changeset": "changeset",
    "check:ci": "yarn check:pkg-constraints && yarn check:project-ref && yarn check:tsc && yarn check:format && yarn check:copyright",
    "check:copyright": "node ./scripts/copyright/checkCopyrightHeaders.js",
    "check:format": "prettier --check \"scripts/**/*.js\" \"packages/*/src/**/*.{js,ts,tsx,html,scss,css}\"",
    "check:pkg-constraints": "yarn constraints",
    "check:project-ref": "node ./scripts/typescript/checkProjectReferenceConfigs.js",
    "check:publish": "yarn node ./scripts/release/checkPublishContent.js --workspaceDir=$INIT_CWD",
    "check:tsc": "yarn build:tsc",
    "check:update": "yarn upgrade-interactive",
    "clean": "rimraf \"build\" && yarn workspaces foreach --all --parallel --verbose run clean",
    "commit": "git-cz",
    "dev": "yarn workspace @finos/legend-studio-app dev",
    "dev:tsc": "tsc --build --watch",
    "fix": "yarn fix:copyright && yarn fix:style && yarn fix:js && yarn fix:format",
    "fix:copyright": "node ./scripts/copyright/checkCopyrightHeaders.js --update",
    "fix:format": "prettier --write \"scripts/**/*.js\" \"packages/*/src/**/*.{js,ts,tsx,html,scss,css}\"",
    "fix:js": "eslint --cache --cache-location ./build/.eslintcache \"scripts/**/*.{js,ts,tsx}\" --fix && yarn workspaces foreach --all --parallel --verbose run fix:js",
    "fix:style": "yarn lint:style --fix",
    "info:dir": "echo $INIT_CWD",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:ci": "yarn lint:js --max-warnings=0 && yarn lint:style --max-warnings=0",
    "lint:js": "eslint --cache --cache-location ./build/.eslintcache \"scripts/**/*.{js,ts,tsx}\" && yarn workspaces foreach --all --parallel --verbose run lint:js",
    "lint:style": "stylelint --cache --cache-location ./build/.stylelintcache \"packages/*/src/**/*.{scss,css}\"",
    "release": "yarn build:setup && yarn node ./scripts/release/publishAndCreateTag.js",
    "setup": "yarn && yarn workspaces foreach --topological-dev --verbose run setup && yarn build:setup",
    "start": "yarn dev",
    "test": "jest",
    "test:ci": "yarn build:setup && yarn test:coverage",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "jest --watch",
    "version": "changeset version && yarn && yarn fix:format"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,md,mdx}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./scripts/commitizenPrompt.js"
    }
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "devDependencies": {
    "@babel/core": "7.13.8",
    "@changesets/changelog-github": "0.2.8",
    "@changesets/cli": "2.14.1",
    "@finos/babel-preset-legend-studio": "workspace:*",
    "@finos/eslint-plugin-legend-studio": "workspace:*",
    "@finos/legend-studio-dev-utils": "workspace:*",
    "@finos/stylelint-config-legend-studio": "workspace:*",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "chalk": "4.1.0",
    "commitizen": "4.2.3",
    "cross-env": "7.0.3",
    "eslint": "7.21.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "sort-package-json": "1.49.0",
    "stylelint": "13.11.0",
    "typescript": "4.2.2",
    "yargs": "16.2.0"
  },
  "engines": {
    "node": ">=14.3.0",
    "yarn": ">=1.22.5"
  }
}
