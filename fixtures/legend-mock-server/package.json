{
  "name": "@finos/legend-fixture-mock-server",
  "private": true,
  "description": "Legend mock server for local development and testing",
  "keywords": [
    "legend",
    "legend-mock",
    "legend-server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/finos/legend-studio.git",
    "directory": "fixtures/legend-mock-server"
  },
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "build:ts": "tsc --project ./tsconfig.build.json",
    "clean": "npm-run-all clean:cache clean:lib",
    "clean:cache": "rimraf \"build\"",
    "clean:lib": "rimraf \"lib\"",
    "dev": "npm-run-all --parallel dev:ts dev:server",
    "dev:server": "yarn build:ts && nodemon --watch lib lib/index.js",
    "dev:ts": "tsc --watch --preserveWatchOutput",
    "lint:js": "cross-env NODE_ENV=production eslint --cache --cache-location ./build/.eslintcache --report-unused-disable-directives --parser-options=project:\"./tsconfig.json\" \"./src/**/*.{js,ts,tsx}\"",
    "start": "node lib/index.js"
  },
  "dependencies": {
    "@fastify/cors": "10.0.1",
    "fastify": "5.1.0"
  },
  "devDependencies": {
    "@finos/legend-dev-utils": "workspace:*",
    "cross-env": "7.0.3",
    "eslint": "9.16.0",
    "nodemon": "3.1.7",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "typescript": "5.7.2"
  }
}
