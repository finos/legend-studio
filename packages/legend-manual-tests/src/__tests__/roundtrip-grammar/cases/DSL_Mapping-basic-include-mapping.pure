Class model::SPerson
{
  firstName: String[1];
  lastName: String[1];
}

Class model::Person
{
  fullName: String[1];
}

Class model::Firm
{
  name: String[1];
  employees: model::Person[1];
}

Class model::SFirm
{
  employees: model::SPerson[1];
  name: String[1];
}


###Mapping
Mapping model::IncludeMapping
(
  *model::Person: Pure
  {
    ~src model::SPerson
    fullName: $src.firstName + ' ' + $src.lastName
  }
)

Mapping model::M2MMapping
(
  include mapping model::IncludeMapping

  *model::Firm: Pure
  {
    ~src model::SFirm
    name: $src.name,
    employees[model_Person]: $src.employees
  }
)
